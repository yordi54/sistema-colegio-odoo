<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="academic_management_guardian_tree" model="ir.ui.view">
            <field name="name">guardian.tree</field>
            <field name="model">guardian</field>
            <field name="arch" type="xml">
                <tree string="Guardians">
                    <field name="name"/>
                    <field name="lastname"/>
                    <field name="ci"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <record id="academic_management_guardian_form" model="ir.ui.view">
            <field name="name">guardian.form</field>
            <field name="model">guardian</field>
            <field name="arch" type="xml">
                <form string="Guardians">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="lastname"/>
                                <field name="ci"/>
                                <field name = "user_id"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="address"/>
                            </group>
                        </group>
                        <notebook>
                            <page string = "Alumnos" name="student">
                                <field name="student_ids">
                                    <tree string="Students">
                                        <field name="rude"/>
                                        <field name="photo" widget="image" options='{"size": [50, 50]}' />
                                        <field name="name"/>
                                        <field name="lastname"/>
                                        <field name="ci"/>
                                        <field name="phone"/>
                                        <field name="address"/>
                                        <field name="state"/>
                                    </tree>
                                    <form string="Students">
                                        <group>
                                            <group>
                                                <field name="rude"/>
                                                <field name="photo" widget="image" options='{"size": [50, 50]}' />
                                                <field name="name" />
                                                <field name="lastname"/>
                                                <field name="ci"/>
                                                <field name="address"/>
                                                
                                            </group>
                                            <group>
                                                <field name="birthdate"/>
                                                <field name="phone"/>
                                                <field name="email"/>
                                                <field name="gender"/>
                                                <field name="state"/>
                                            
                                            </group>
                                        </group>
                                    </form>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="academic_management.action_guardian" model="ir.actions.act_window">
            <field name="name">Tutor</field>
            <field name="res_model">guardian</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>    
</odoo>